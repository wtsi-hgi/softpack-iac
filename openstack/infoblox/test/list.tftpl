[
    {
        "method": "GET",
        "object": "record:a",
        "data": {
            "name": "${build_controller_hostname}"
        }
    }
    %{ if length(build_node_hostnames) > 0 }
    ,
    %{ endif }
    %{ for index, hostname in build_node_hostnames}
    {
        "method": "GET",
        "object": "record:a",
        "data": {
            "name": "${hostname}"
        }
    }
    %{ if index+1 < length(build_node_hostnames) }
    ,
    %{ endif }
    %{ endfor }
]

